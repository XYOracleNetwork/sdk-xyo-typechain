{
  "compilerOptions": {
    "target": "es2020",                       // good for Node 14+ (Hardhat 2 requires >=12)
    "module": "commonjs",                     // Hardhat plugins expect CommonJS
    "strict": true,                           // enable strict type checking
    "esModuleInterop": true,                  // allow `import foo from 'foo'`
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                     // faster builds, avoids TS lib conflicts
    "outDir": "dist",                         // optional, if you want compiled output
    "types": [
      "node",
      "mocha",                                // for `describe/it` in tests
      "chai",                                 // for `expect/assert`
      "hardhat"                               // Hardhat runtime environment
    ]
  },
  "ts-node": {
    "esm": true,
    "experimentalResolver": true,
    "files": true // only if you have "files", "include" or "exclude" in your config
  },
  "include": [
    "./hardhat.config.ts",
    "./scripts",
    "./test",
    "./typechain-types",
    "./ignition"                      
  ]
}