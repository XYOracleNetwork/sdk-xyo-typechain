// .vscode/launch.json
{
  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "Debug Hardhat Tests",
      "type": "node",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        "workspace",
        "@xyo-network/solidity",
        "package-test"
      ],
      "skipFiles": ["<node_internals>/**"],
    }
  ]
}